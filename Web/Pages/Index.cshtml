@page
@model IndexModel
<div class="container text-center my-5">
    <h1 class="display-4 mb-4 text-primary">Welcome to the Car Parking System</h1>
    <p class="lead mb-5 text-muted">Manage your parking with ease. Track availability, book spaces, and more!</p>

    <div class="row">
        <!-- Card 1: Parking Availability -->
        <div class="col-lg-4 col-md-6 mb-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title text-primary">Parking Availability</h5>
                    <p class="card-text">Check available parking spots in real-time and reserve your space with ease.</p>
                    <a href="#" class="btn btn-primary">Check Availability</a>
                </div>
            </div>
        </div>

        <!-- Card 2: Parking History -->
        <div class="col-lg-4 col-md-6 mb-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title text-primary">Parking History</h5>
                    <p class="card-text">Review your past parking history and payments for better management.</p>
                    <a href="#" class="btn btn-primary">View History</a>
                </div>
            </div>
        </div>

        <!-- Card 3: User Profile -->
        <div class="col-lg-4 col-md-6 mb-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title text-primary">Your Profile</h5>
                    <p class="card-text">Manage your account details, view your current reservations, and more.</p>
                    <a href="#" class="btn btn-primary">Go to Profile</a>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-5">
        <div class="col-12">
            <h2 class="h4 text-secondary">Current Parking Status</h2>
            <p class="text-muted">Here you can see the current status of available parking spots in different areas.</p>
        </div>
        <div class="col-12">
            <!-- You can add charts or status indicators here later -->
            <div class="alert alert-success">
                <strong>Parking is available in all zones.</strong> You can park your car in any available spot.
            </div>
        </div>
    </div>
</div>